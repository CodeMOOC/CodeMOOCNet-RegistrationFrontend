@{
    Layout = "Main";
    ViewData["Title"] = "Login";
}

<div class="container">
    <h1 class="text-center">Login</h1>

    <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3">
        <form asp-controller="Login" asp-action="PerformLogin" method="post" class="form-horizontal" role="form" asp-antiforgery="true">
            <div class="form-group">
                <label>Indirizzo e-mail *</label>
                <input name="email" type="text" class="form-control" value="@ViewData["email"]" />
            </div>

            <div class="form-group">
                <label>Password *</label>
                <input name="password" type="password" class="form-control" />
            </div>

            <div class="form-group">
                <label><input name="remember" type="checkbox" value="true" /> Rimani collegato</label>
            </div>

            <input type="hidden" name="proceed" value="@ViewData["proceed"]" />

            @if(ViewData["failure"] != null) {
            <div class="form-error">
                Username o password non validi.
            </div>
            }

            <button id="submit" type="submit" value="submit" class="btn btn-primary btn-block">Login</button>
        </form>
    </div>

</div>
