@using CodeMooc.Web.Model
@model ResetPasswordViewModel
@{
    Layout = "Main";
    ViewData["Title"] = "Reimposta password";
}

<div class="container">
    <h1 class="text-center">Reimposta password</h1>

    <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3">

        @if (Model.PasswordResetRequested) {
            <p>Hai richiesto di reimpostare la tua password: riceverai il link per completare la procedura tramite e-mail.</p>
        }
        else {
            <form asp-controller="Login" asp-action="PerformResetPassword" method="post" class="form-horizontal" role="form" asp-antiforgery="true">
                <div class="form-group">
                    <label>Indirizzo e-mail *</label>
                    <input name="email" type="text" class="form-control" />
                </div>

                @if(Model.FailureDuringReset) {
                <div class="form-error">
                    Qualcosa è andato storto. Riprova.
                </div>
                }

                <button id="submit" type="submit" value="submit" class="btn btn-primary btn-block">Reimposta password</button>
            </form>
        }

    </div>

</div>
