@using CodeMooc.Web
@using CodeMooc.Web.Model
@model BadgeEvidenceViewModel
@{
    Layout = "Main";
    ViewData["Title"] = "Conferma " + Model.BadgeType.GetName();
}

<div class="container">
    <h1 class="text-center">@Model.BadgeType.GetName()</h1>

    <div class="col-8 offset-2 col-sm-6 offset-sm-3 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
        <p>
            <img src="@Model.BadgeType.GetRootPath()-1000.png" alt="@Model.BadgeType.GetName() badge" srcset="@Model.BadgeType.GetSrcSet()" class="img-fluid" />
        </p>
    </div>

    <div class="col-12 col-sm-8 offset-sm-2 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
        @Html.Raw(string.Format(Model.BadgeType.GetEvidence(), Model.Name, Model.Surname, Model.Email))
    </div>
</div>
